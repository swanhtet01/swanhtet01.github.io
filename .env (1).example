# Example .env for Super Mega AI Agent Platform

# AI Service Configuration
OPENAI_API_KEY=your-api-key-here
MODEL_NAME=gpt-3.5-turbo
MAX_TOKENS=500

# GitHub Configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_REPO=your-username/your-repo

# Database Configuration
DATABASE_URL=sqlite:///data/ai_platform.db
DB_POOL_SIZE=5

# Cloud Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here

# Project Settings
DEBUG=false
PROJECT_NAME="Super Mega Inc"
VERSION="0.1.0"
LOG_LEVEL=INFO

# Security Settings
API_RATE_LIMIT=60
MAX_RETRIES=3
TIMEOUT=30
DB_MAX_OVERFLOW=10

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Notification Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
NOTIFICATION_FROM=noreply@supermega.com
NOTIFICATION_TO=admin@supermega.com,team@supermega.com

# Social Media OAuth Credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_CLIENT_TOKEN=your_meta_client_token

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000"]

# Logging Settings
LOG_LEVEL=INFO

# OpenTelemetry Settings
OTLP_ENDPOINT=http://localhost:4317

# Elasticsearch Settings
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
