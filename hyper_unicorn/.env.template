# ============================================================================
# HYPER UNICORN - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# ==========================================================================
# AI API Keys (REQUIRED - at least one)
# ==========================================================================

# Google Gemini - Best for speed and cost
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude - Best for complex reasoning
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI - Best for code generation
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================================================
# Bangkok Node Configuration
# ==========================================================================

# Your Bangkok Node's Tailscale IP
BANGKOK_NODE_IP=100.113.30.52

# ==========================================================================
# Service Credentials
# ==========================================================================

# n8n Workflow Engine
N8N_USER=admin
N8N_PASSWORD=your_secure_password

# Grafana Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_password

# Jupyter Sandbox
JUPYTER_TOKEN=your_secure_token

# ==========================================================================
# Optional: External Services
# ==========================================================================

# GitHub (for repo access)
GITHUB_TOKEN=your_github_token

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Discord (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# ==========================================================================
# System Configuration
# ==========================================================================

# Timezone
TZ=Asia/Bangkok

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Max concurrent agents
MAX_CONCURRENT_AGENTS=6
